@model ConstructDetailViewModel
@{
	ViewData["Title"] = "Detail";
}

<div class="card mt-3 mb-3 w-100">

	<div class="m-auto w-100">

		<div class="mt-3 mb-5 w-100 m-auto">
			<div class="row mt-3">
				<div class="ml-3 rounded-1 float-left">
					<a href="/Engineer/Quotation/History" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Back</a>
				</div>
			</div>
			<h3 class="text-center"><b>Thông tin công trình</b></h3>
			<hr class="w-75 m-auto"></hr>
		</div>



		<div class="row mt-3 text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Loại công trình:</b></label>
				<p>@Model.ConstructionTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Mức đầu tư:</b></label>
				<p>@Model.InvestmentTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Chiều rộng:</b></label>
				<p>@Model.Width</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Chiều dài:</b></label>
				<p>@Model.Length</a>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Mặt tiền:</b></label>
				<p>@Model.Facade</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Hẻm:</b></label>
				<p>@Model.Alley</p>
			</div>
		</div>


		<div class="row text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Số tầng:</b></label>
				<p>@Model.Room</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Số tầng:</b></label>
				<p>@Model.Floor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Lửng:</b></label>
				<p>@Model.Mezzanine</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Tầng thượng:</b></label>
				<p>@Model.RooftopFloor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Ban công:</b></label>
				<p>@(Model.Balcony == true ? "Có ban công" : "Không có ban công")</p>
			</div>
		</div>

		<div class="row text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Loại móng:</b></label>
				<p>@Model.FoundationTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Tầng hầm:</b></label>
				<p>@Model.BasementTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Loại mái:</b></label>
				<p>@Model.RooftopTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Diện tích vườn:</b></label>
				<p>@Model.Garden</p>
			</div>
		</div>

		<!-- Hiện bill của Custom Quotation -->
		<div class="row mb-3">
			<div class="table-responsive">

				<table id="tblCustomQuotationBill" class="table-bordered table-striped text-black" style="width:100%">
					<thead>
						<tr>
							<th class="text-nowrap">
								Giá / m2
							</th>
							<th class="text-nowrap">
								Diện tích
							</th>
							<th class="text-nowrap">
								Móng
							</th>
							<th class="text-nowrap">
								Tầng hầm
							</th>
							<th class="text-nowrap">
								Mái
							</th>
							<th class="text-nowrap">
								Ban công
							</th>
							<th class="text-nowrap">
								Tổng diện tích
							</th>
							<th class="text-nowrap">
								Giá công việc
							</th>
							<th class="text-nowrap">
								Giá vật tư
							</th>
							<th class="text-nowrap">
								Tổng giá
							</th>
						</tr>
					</thead>
				</table>

			</div>
		</div>

		<!--Hiện 2 bảng TaskListSession và MaterialListSession -->
		<div class="row mb-3">

			<!--TaskList-->
			<div class="col-lg-5">
				<div class="card shadow border-0">
					<div class="card-header bg-main">
						<div class="row">
							<div class="col-12 text-center">
								<h2 class="text-white m-0">Công việc cần làm</h2>
							</div>
						</div>
					</div>

					<div class="card-body">

						<div class="table-responsive">
							<table id="tblCustomQuotationTask" class="table-bordered table-striped text-black" style="width:100%">
								<thead>
									<tr>
										<th class="text-nowrap">
											Mã
										</th>
										<th class="text-nowrap">
											Tên
										</th>
										<th class="text-nowrap">
											Giá gốc
										</th>
										<th class="text-nowrap">
											Giá tổng
										</th>
										<th class="text-nowrap">
											Loại
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>

			<!--MaterialList-->
			<div class="col-lg-7">
				<div class="card shadow border-0">
					<div class="card-header bg-main">
						<div class="row">
							<div class="col-12 text-center">
								<h2 class="text-white m-0">Vật tư cần dùng</h2>
							</div>
						</div>
					</div>

					<div class="card-body">

						<div class="table-responsive">
							<table id="tblMaterialDetail" class="table-bordered table-striped text-black" style="width:100%">
								<thead>
									<tr>
										<th class="text-nowrap">
											Mã
										</th>
										<th class="text-nowrap">
											Tên
										</th>
										<th class="text-nowrap">
											Giá gốc
										</th>
										<th class="text-nowrap">
											Đơn vị
										</th>
										<th class="text-nowrap">
											Số lượng
										</th>
										<th class="text-nowrap">
											Giá tổng
										</th>
										<th class="text-nowrap">
											Loại
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>

@section Scripts {
	<script src="~/js/datatables/engineerDTB/CustomQuotationBillDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/CustomQuotationTaskHistoryDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/MaterialDetailHistoryDTB.js"></script>
}
