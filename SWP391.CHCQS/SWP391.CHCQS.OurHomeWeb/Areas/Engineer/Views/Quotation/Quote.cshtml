@model ConstructDetailViewModel
@{
	ViewData["Title"] = "Quote";
}

<div class="container img-thumbnail mt-3 mb-5">

	<div class="m-auto">

		<div class="mt-3 mb-5 w-100 m-auto">
			<div class="row mt-3">
				<div class="m-1 rounded-1 float-left">
					<a asp-area="Engineer" asp-controller="Quotation" asp-action="Index" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Back</a>
				</div>
			</div>
			<h3 class="text-center"><b>Construct Detail</b></h3>
			<hr class="w-75 m-auto"></hr>
		</div>



		<div class="row mt-3">
			<div class="col-lg">
				<label><b class="text-nowrap">Type of construction:</b></label>
				<p>@Model.ConstructionTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Investment:</b></label>
				<p>@Model.InvestmentTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Width:</b></label>
				<p>@Model.Width</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Length:</b></label>
				<p>@Model.Length</>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Facade:</b></label>
				<p>@Model.Facade</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Alley:</b></label>
				<p>@Model.Alley</p>
			</div>
		</div>


		<div class="row">
			<div class="col-lg">
				<label><b class="text-nowrap">Number of floors:</b></label>
				<p>@Model.Floor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Mezzanine:</b></label>
				<p>@Model.Mezzanine</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Rooftop floor:</b></label>
				<p>@Model.RooftopFloor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Balcony:</b></label>
				<p>@Model.Balcony</p>
			</div>
		</div>

		<div class="row">
			<div class="col-lg">
				<label><b class="text-nowrap">Foudation:</b></label>
				<p>@Model.FoundationTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Basement:</b></label>
				<p>@Model.BasementTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Roof:</b></label>
				<p>@Model.RooftopTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Garden:</b></label>
				<p>@Model.Garden</p>
			</div>
		</div>


	</div>
</div>


<!--Hiện 2 bảng TaskList và MaterialList-->
<div class="row">
	<!--TaskList-->
	<div class="col-sm-5">
		<div class="card shadow border-0">
			<div class="card-header bg-main">
				<div class="row">
					<div class="col-12 text-center">
						<h2 class="text-white m-0">Task List</h2>
					</div>
				</div>
			</div>

			<div class="card-body">

				<div class="table-responsive">
					<table id="tblTask" class="table-bordered table-striped text-black" style="width:100%">
						<thead>
							<tr>
								<th>
									Id
								</th>
								<th>
									Name
								</th>
								<th>
									Unit Price
								</th>
								<th>
									Category
								</th>
								<th>
									Actions
								</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!--MaterialList-->
	<div class="col-sm-7">
		<div class="card shadow border-0">
			<div class="card-header bg-main">
				<div class="row">
					<div class="col-12 text-center">
						<h2 class="text-white m-0">Material List</h2>
					</div>
				</div>
			</div>

			<div class="card-body">

				<div class="table-responsive">
					<table id="tblMaterial" class="table-bordered table-striped text-black" style="width:100%">
						<thead>
							<tr>
								<th>
									Id
								</th>
								<th>
									Name
								</th>
								<th>
									Inventory Quantity
								</th>
								<th>
									Unit Price
								</th>
								<th>
									Unit
								</th>
								<th>
									Category
								</th>
								<th>
									Actions
								</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/datatables/engineerDTB/MaterialDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/TaskDTB.js"></script>
}
