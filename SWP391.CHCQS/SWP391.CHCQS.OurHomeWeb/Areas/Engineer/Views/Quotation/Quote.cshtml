@model ConstructDetailViewModel
@{
	ViewData["Title"] = "Quote";
}

<div class="card mt-3 mb-3 w-100">

	<div class="m-auto w-100">

		<div class="mt-3 mb-5 w-100 m-auto">
			<div class="row mt-3">
				<div class="ml-3 rounded-1 float-left">
					<a onClick="BackToIndex('/Engineer/Quotation/Index')" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Back</a>
				</div>
			</div>
			<h3 class="text-center"><b>Construct Detail</b></h3>
			<hr class="w-75 m-auto"></hr>
		</div>



		<div class="row mt-3 text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Construction:</b></label>
				<p>@Model.ConstructionTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Investment:</b></label>
				<p>@Model.InvestmentTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Width:</b></label>
				<p>@Model.Width</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Length:</b></label>
				<p>@Model.Length</a>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Facade:</b></label>
				<p>@Model.Facade</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Alley:</b></label>
				<p>@Model.Alley</p>
			</div>
		</div>


		<div class="row text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Number of floors:</b></label>
				<p>@Model.Floor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Mezzanine:</b></label>
				<p>@Model.Mezzanine</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Rooftop floor:</b></label>
				<p>@Model.RooftopFloor</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Balcony:</b></label>
				<p>@Model.Balcony</p>
			</div>
		</div>

		<div class="row text-center">
			<div class="col-lg">
				<label><b class="text-nowrap">Foudation:</b></label>
				<p>@Model.FoundationTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Basement:</b></label>
				<p>@Model.BasementTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Roof:</b></label>
				<p>@Model.RooftopTypeName</p>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Garden:</b></label>
				<p>@Model.Garden</p>
			</div>
		</div>


		<!--Hiện 2 bảng TaskListSession và MaterialListSession -->
		<div class="row mb-3">

			<!--TaskList-->
			<div class="col-lg-5">
				<div class="card shadow border-0">
					<div class="card-header bg-main">
						<div class="row">
							<div class="col-12 text-center">
								<h2 class="text-white m-0">Tasks of Quote</h2>
							</div>
						</div>
					</div>

					<div class="card-body">

						<div class="table-responsive">
							<table id="tblCustomQuotationTask" class="table-bordered table-striped text-black" style="width:100%">
								<thead>
									<tr>
										<th>
											Id
										</th>
										<th>
											Name
										</th>
										<th>
											Unit Price
										</th>
										<th>
											Price
										</th>
										<th>
											Actions
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>

			<!--MaterialList-->
			<div class="col-lg-7">
				<div class="card shadow border-0">
					<div class="card-header bg-main">
						<div class="row">
							<div class="col-12 text-center">
								<h2 class="text-white m-0">Materials of Quote</h2>
							</div>
						</div>
					</div>

					<div class="card-body">

						<div class="table-responsive">
							<table id="tblMaterialDetail" class="table-bordered table-striped text-black" style="width:100%">
								<thead>
									<tr>
										<th>
											Id
										</th>
										<th>
											Name
										</th>
										<th>
											Unit Price
										</th>
										<th>
											Unit
										</th>
										<th>
											Quantity
										</th>
										<th>
											Price
										</th>
										<th>
											Actions
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row w-75 m-auto">
			<a asp-area="Engineer" asp-controller="Quotation" asp-action="SubmitQuote" class="btn btn-main text-white mb-3"><i class="bi bi-arrow-90deg-up"></i> Submit Quote</a>
		</div>

	</div>
</div>



