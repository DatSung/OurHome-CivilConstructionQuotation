			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/datatables/engineerDTB/CustomQuotationTaskDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/MaterialDetailDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/MaterialDTB.js"></script>
	<script src="~/js/datatables/engineerDTB/TaskDTB.js"></script>
}
