@model TaskVM
@{
    ViewData["Title"] = "Tạo công việc";
}


<div class="card shadow border-0 my-4">
    <div class="card-header bg-main ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Tạo công việc</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="row">
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Task.Name" class="form-control border-0 shadow" />
                        <label asp-for="Task.Name" class="ms-2"></label>
                        <span asp-validation-for="Task.Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Task.Description" class="form-control border-0 shadow" />
                        <label asp-for="Task.Description" class="ms-2"></label>
                        <span asp-validation-for="Task.Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Task.UnitPrice" class="form-control border-0 shadow" />
                        <label asp-for="Task.UnitPrice" class="ms-2"></label>
                        <span asp-validation-for="Task.UnitPrice" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating py-2 col-12">
                        <select asp-for="Task.CategoryId" asp-items="@Model.TaskCategoryList" class="form-select border-0 shadow">
                            <option disabled selected>--Chọn loại--</option>
                        </select>
                        <label asp-for="Task.CategoryId" class="ms-2"></label>
                        <span asp-validation-for="Task.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control btn-main">Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Task" asp-action="Index" class="btn btn-main border form-control">
                                Trở lại
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>

</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}