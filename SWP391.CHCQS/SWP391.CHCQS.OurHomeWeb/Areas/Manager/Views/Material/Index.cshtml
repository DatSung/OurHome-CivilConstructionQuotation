
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_LayoutManager";
}


<div class="card shadow border-0 my-4">
	<div class="card-header bg-main ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Danh sách vật liệu</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-area="Manager" asp-controller="Material" asp-action="Create" class="btn btn-primary btn-main">
					<i class="bi bi-plus-circle"></i>  Tạo vật liệu mới
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table id="tblMaterial" class="table-bordered table-striped text-black" style="width:100%">
				<thead>
					<tr>
						<th>
							Mã
						</th>
						<th>
							Tên
						</th>
						
						<th>
							Gía gốc
						</th>
						<th>
							Đơn vị
						</th>
						<th>
							Loại
						</th>
						<th>
							Hành động
						</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/datatables//managerDTB/MaterialDTB.js"></script>
}
