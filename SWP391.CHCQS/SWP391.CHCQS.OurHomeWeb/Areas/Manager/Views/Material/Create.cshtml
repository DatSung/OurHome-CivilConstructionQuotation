@model MaterialViewModel

<div class="card shadow border-0 my-4">
	<div class="card-header bg-main ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Material</h2>
			</div>
		</div>
	</div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Material.Name" class="form-control border-0 shadow" />
                    <label asp-for="Material.Name" class="ms-2"></label>
                    <span asp-validation-for="Material.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Material.InventoryQuantity" class="form-control border-0 shadow" />
                    <label asp-for="Material.InventoryQuantity" class="ms-2"></label>
                    <span asp-validation-for="Material.InventoryQuantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Material.UnitPrice" class="form-control border-0 shadow" />
                    <label asp-for="Material.UnitPrice" class="ms-2"></label>
                    <span asp-validation-for="Material.UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Material.Unit" class="form-control border-0 shadow" />
                    <label asp-for="Material.Unit" class="ms-2"></label>
                    <span asp-validation-for="Material.Unit" class="text-danger"></span>
                </div>

               
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control btn-main">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>

</div>