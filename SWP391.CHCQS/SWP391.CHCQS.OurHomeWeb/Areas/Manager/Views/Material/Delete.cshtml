@model Material

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Material</h2>
            <hr />
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="UnitPrice" disabled class="form-control border-0 shadow" />
            <label asp-for="UnitPrice" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Unit" disabled class="form-control border-0 shadow" />
            <label asp-for="Unit" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Category.Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Category.Name" class="ms-2"></label>

        </div>



        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Material" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>