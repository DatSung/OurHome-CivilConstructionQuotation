@model CustomQuotationDetailViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="container img-thumbnail mt-3 mb-5">

        <div class="m-auto">

            <div class="mt-3 mb-5 w-100 m-auto">
                <div class="row mt-3">
                    <div class="m-1 rounded-1 float-left">
                        <a asp-area="Manager" asp-controller="CustomQuotation" asp-action="Index" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Back</a>
                    </div>
                </div>
                <h3 class="text-center"><b>Construct Information</b></h3>
                <hr class="w-75 m-auto"></hr>
            </div>
            <!--Khu vực hiển thị thông tin custom quotation dc tạo bởi seller -->

            <div class="row mt-3">
                <div class="col-lg">
                    <label><b class="text-nowrap">Request Id:</b></label>
                    <p>@Model.RequestId</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Type of construction:</b></label>
                    <p>@Model.ConstructDetailVM.TypeOfConstruct</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Investment:</b></label>
                    <p>@Model.ConstructDetailVM.Investment</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Width:</b></label>
                    <p>@Model.ConstructDetailVM.Width</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Length:</b></label>
                    <p>@Model.ConstructDetailVM.Length</>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Facade:</b></label>
                    <p>@Model.ConstructDetailVM.Facade</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Alley:</b></label>
                    <p>@Model.ConstructDetailVM.Alley</p>
                </div>
            </div>


            <div class="row">
                <div class="col-lg">
                    <label><b class="text-nowrap">Number of floors:</b></label>
                    <p>@Model.ConstructDetailVM.Floor</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Mezzanine:</b></label>
                    <p>@Model.ConstructDetailVM.Mezzanine</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Rooftop floor:</b></label>
                    <p>@Model.ConstructDetailVM.RooftopFloor</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Balcony:</b></label>
                    <p>@Model.ConstructDetailVM.BalconyStatus</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg">
                    <label><b class="text-nowrap">Foudation:</b></label>
                    <p>@Model.ConstructDetailVM.Foundation</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Basement:</b></label>
                    <p>@Model.ConstructDetailVM.Basement</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Roof:</b></label>
                    <p>@Model.ConstructDetailVM.Roof</p>
                </div>
                <div class="col-lg">
                    <label><b class="text-nowrap">Garden:</b></label>
                    <p>@Model.ConstructDetailVM.Garden</p>
                </div>
            </div>

        </div>
    </div>
</div>

<!--Hiện 2 bảng TaskListSession và MaterialListSession -->
<div class="row mb-3">

    <!--TaskList-->
    <div class="col-lg-5">
        <div class="card shadow border-0">
            <div class="card-header bg-main">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white m-0">Tasks</h2>
                    </div>
                </div>
            </div>

            <div class="card-body">

                <div class="table-responsive">
                    <table id="tblTaskDetail" class="table-bordered table-striped text-black" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--MaterialList-->
    <div class="col-lg-7">
        <div class="card shadow border-0">
            <div class="card-header bg-main">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white m-0">Materials </h2>
                    </div>
                </div>
            </div>

            <div class="card-body">

                <div class="table-responsive">
                    <table id="tblMaterialDetail" class="table-bordered table-striped text-black" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Quantity
                                </th>
                                
                                <th>
                                    Price
                                </th>
                                <th>
                                    Unit
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<!--Khu vự hiển thị thời gian làm việc và kết thúc của seller và engineer-->
<div class="row">
    <div class="container img-thumbnail mt-3 mb-5">
        <div class="mt-3 mb-5 w-100 m-auto">
            <h3 class="text-center"><b>Working Time</b></h3>
            <hr class="w-75 m-auto"></hr>
        </div>
        <div class="row mt-3">
            <div class="col-lg">
                <b class="text-nowrap">Seller</b>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Delegation: </b></label>
                <p>@Model.DelegationDateSeller</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Submission:</b></label>
                <p>@Model.SubmissionDateSeller</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <b class="text-nowrap">Engineer</b>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Recieve:</b></label>
                <p>@Model.RecieveDateEngineer</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Submission:</b></label>
                <p>@Model.SubmissionDateEngineer</p>
            </div>
        </div>

    </div>
</div>


<!--Khu vực hiển thị nhân viên đảm nhiệm -->
<div class="d-flex justify-content-center">
    <div class="border">
        <div class="col text-center mt-3">
            <p class="mb-0 text-center"><b>Seller</b></p>
        </div>
        <partial name="~/Areas/Manager/Views/StaffProfilePartial.cshtml" model="@Model.Seller">
    </div>
    <div class="border">
        <div class=" col text-center mt-3">
            <p class="mb-0"><b>Engineer</b></p>
        </div>
        <partial name="~/Areas/Manager/Views/StaffProfilePartial.cshtml" model="@Model.Enginneer">
    </div>
    <div class="border">
        <div class="col text-center mt-3">
            <p class="mb-0"><b>Manager</b></p>
        </div>
        <partial name="~/Areas/Manager/Views/StaffProfilePartial.cshtml" model="@Model.Manager">
    </div>
</div>
<div class="w-100 btn-group mb-3 mt-3" role="group">
    <a href="/Manager/CustomQuotation/GetDetail?id=${data}" class="btn btn-primary btn-main border-0 m-1"><i class="bi bi-check"></i>Confirm</a>
</div>

@section Scripts {
    <script src="~/js/datatables/managerDTB/TaskDetailDTB.js"></script>
    <script src="~/js/datatables/managerDTB/MaterialDetailDTB.js"></script>

}





