@model Project

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Project</h2>
            <hr />
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Location" disabled class="form-control border-0 shadow" />
            <label asp-for="Location" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Scale" disabled class="form-control border-0 shadow" />
            <label asp-for="Scale" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Size" disabled class="form-control border-0 shadow" />
            <label asp-for="Size" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Description" disabled class="form-control border-0 shadow" />
            <label asp-for="Description" class="ms-2"></label>

        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="Overview" disabled class="form-control border-0 shadow" />
            <label asp-for="Overview" class="ms-2"></label>

        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="Date" disabled class="form-control border-0 shadow" />
            <label asp-for="Date" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Customer.Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Customer.Name" class="ms-2"></label>

        </div>



        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Project" asp-action="Index" class="btn btn-main border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>