
@{
    ViewData["Title"] = "Các gói dịch vụ";
    //Layout = "~/Views/Shared/_LayoutManager.cshtml";
	
}


<div class="card shadow border-0 my-4">
	<div class="card-header bg-main ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Danh sách gói dịch vụ</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-area="Manager" asp-controller="Combo" asp-action="Create" class="btn btn-main">
					<i class="bi bi-plus-circle"></i>  Tạo gói dịch vụ mới
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table id="tblCombo" class="table-bordered table-striped text-black" style="width:100%">
				<thead>
					<tr>
						<th class="text-nowrap">
							Mã
						</th>
						<th class="text-nowrap">
							Tên
						</th>
						<th class="text-nowrap">
							Mô tả
						</th>
						<th class="text-nowrap">
							Giá
						</th>
						
						<th class="text-nowrap">
							Loại công trình
						</th>
						<th class="text-nowrap">
							Hành động
						</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/datatables//managerDTB/ComboDTB.js"></script>
}