@model Combo

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Xóa gói dịch vụ</h2>
            <hr />
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Name" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Description" disabled class="form-control border-0 shadow" />
            <label asp-for="Description" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price" disabled class="form-control border-0 shadow" />
            <label asp-for="Price" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Construction.Name" disabled class="form-control border-0 shadow" />
            <label asp-for="Construction.Name" class="ms-2"></label>

        </div>



        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control"> Xóa </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="StandardQuotation" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Trở lại
                </a>
            </div>
        </div>


    </div>
</form>