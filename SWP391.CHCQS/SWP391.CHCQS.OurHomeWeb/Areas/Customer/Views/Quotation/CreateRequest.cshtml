@{
	ViewData["Title"] = "Create Request";
}
<div class="d-flex img-thumbnail justify-content-center">
	<div class="d-flex align-items-center">
		<h3 class="p-3"><a class="text-decoration-none text-black user-select-auto" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3"><a class="text-decoration-none user-select-auto" style="color: #F27456" asp-area="Customer" asp-controller="Quotation" asp-action="Index">Quotation</a></h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3"><a class="text-decoration-none user-select-auto" style="color: #F27456" asp-area="Customer" asp-controller="Quotation" asp-action="SendRequest">Send Request</a></h3>
	</div>
</div>

<hr></hr>

<partial name="_QuotationSubNav"></partial>

<div class="container img-thumbnail mt-5 mb-5">

	<form class="row m-auto">

		<div class="mt-3 mb-5 w-75 m-auto">
			<h3 class="text-center"><b>Your Informations</b></h3>
			<hr></hr>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b>Full Name:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b>Gender:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Gender--</option>
					<option>Men</option>
					<option>Women</option>
					<option>Other</option>
				</select>
			</div>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b>Phone Number:</b></label>
				<input class="form-control" type="text"></input>
			</div>
			<div class="col-sm">
				<label><b>Email:</b></label>
				<input class="form-control" type="email"></input>
			</div>
		</div>

		<div class="mt-5 mb-5 w-75 m-auto">
			<h3 class="text-center"><b>Your Details</b></h3>
			<hr></hr>
		</div>

		<div class="row">
			<div class="col-lg">
				<label><b>Construct Name:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-lg">
				<label><b class="text-nowrap">Type of Construction:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-lg">
				<label><b>Location:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-lg">
				<label><b>Acreage:</b></label>
				<input class="form-control"></input>
			</div>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b>Description:</b></label>
				<textarea rows="6"  class="form-control"></textarea>
			</div>
		</div>

		<div class="row mt-3 mb-2">
			<div class="col-sm">
				<button class="form-control text-white btn btn-main" style="background-color: #F27456" type="submit">Submit</button>
			</div>
		</div>

	</form>
</div>

