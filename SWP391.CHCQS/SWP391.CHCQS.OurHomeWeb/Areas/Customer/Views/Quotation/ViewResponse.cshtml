@{
}

@{
	ViewData["Title"] = "Response Detail";
}
<div class="d-flex img-thumbnail justify-content-center">
	<div class="d-flex align-items-center">
		<h3 class="p-3">
			<a class="text-decoration-none text-black user-select-auto" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
		</h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3">
			<a class="text-decoration-none user-select-auto" style="color: #F27456" asp-area="Customer" asp-controller="Quotation" asp-action="Index">Quotation</a>
		</h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3">
			<a class="text-decoration-none user-select-auto" style="color: #F27456" asp-area="Customer" asp-controller="Quotation" asp-action="ManageRequest">Manage Request</a>
		</h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3">
			<a class="text-decoration-none user-select-auto" style="color: #F27456">View Response</a>
		</h3>
	</div>
</div>

<hr></hr>

<partial name="_QuotationSubNav"></partial>

<div class="row img-thumbnail w-50 text-wrap m-auto text-center mt-2">
	<div class="col">
		<p class="m-0 text-dark">Response Detail</p>
	</div>
</div>

<div class="container img-thumbnail mt-3 mb-5">

	<form class="m-auto">

		<div class="mt-3 mb-5 w-75 m-auto">
			<h3 class="text-center"><b>House's DatSung</b></h3>
			<hr></hr>
		</div>

		<div class="row mt-2">
			<div class="col-sm">
				<label><b class="text-nowrap">Type of construction:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>Townhouse</option>
					<option>Villa</option>
					<option>Four-level house</option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Investment:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Level--</option>
					<option>Build a rough house</option>
					<option>Build a complete house</option>
					<option>Economy Level</option>
					<option>Premium Level</option>
					<option>Bussiness Level </option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Width:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Length:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Facade:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Quantity--</option>
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Alley:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>Wider than 5m</option>
					<option>Width from 3m - 5m</option>
					<option>Less than 3m</option>
				</select>
			</div>
		</div>


		<div class="row">
			<div class="col-sm">
				<label><b class="text-nowrap">Number of floors</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Badger</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Rooftop floor:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Balcony:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>Do not have</option>
					<option>There is a balcony</option>
				</select>
			</div>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b class="text-nowrap">Living Room:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Bedroom:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Kitchen:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Bathroom:</b></label>
				<input class="form-control"></input>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Worship Room:</b></label>
				<input class="form-control"></input>
			</div>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b class="text-nowrap">Foudation:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>Single Foudation</option>
					<option>Stone Claw</option>
					<option>Pile Foudation</option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Basement:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>No stew</option>
					<option>Depth 1.0 - 1.3</option>
					<option>Depth 1.3 - 1.7</option>
					<option>Depth 1.2 - 2.0</option>
					<option>Depth > 2.0</option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Roof:</b></label>
				<select type="text" class="form-control">
					<option disabled selected>--Select Type--</option>
					<option>Roof</option>
					<option>Reinforced concrete roof</option>
					<option>Purlins + tiles</option>
					<option>Reinforced concrete + tiles</option>
				</select>
			</div>
			<div class="col-sm">
				<label><b class="text-nowrap">Garden:</b></label>
				<input class="form-control"></input>
			</div>
		</div>

		<div class="row">
			<div class="col-sm">
				<label><b>Description:</b></label>
				<textarea class="form-control"></textarea>
			</div>
		</div>

		<div class="row mt-3 mb-2">
			<div class="col-sm m-1 btn-group rounded-1" style="background-color: #F27456" role="group">
				<a asp-area="Customer" asp-controller="Quotation" asp-action="RequestHistory" class="btn mx-2 text-white">Back</a>
			</div>
		</div>

	</form>
</div>

@section Scripts {
	<script>
		tinymce.init({
			selector: 'textarea',
			plugins: 'tinycomments mentions anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
			toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
			tinycomments_mode: 'embedded',
			tinycomments_author: 'Author name',
			mergetags_list: [
				{ value: 'First.Name', title: 'First Name' },
				{ value: 'Email', title: 'Email' },
			],
			ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
		});
	</script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}