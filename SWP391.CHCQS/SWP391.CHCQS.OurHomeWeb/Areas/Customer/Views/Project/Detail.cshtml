@model Project

<div class="d-flex img-thumbnail justify-content-center">
	<div class="d-flex align-items-center">
		<h3 class="p-3"><a class="text-decoration-none text-black user-select-auto" asp-area="Customer" asp-controller="Home" asp-action="Index">Trang chủ</a></h3>
		<i class="fa-solid fa-arrow-right-long"></i>
		<h3 class="p-3"><a class="text-decoration-none user-select-auto" style="color: #F27456" asp-area="Customer" asp-controller="Project" asp-action="Index">Dự án</a></h3>
	</div>
</div>

<div class="container mt-5">
	<h1 style="font-weight:600">Thiết kế hiện đại và sang trọng</h1>
	<p style="font-size:1.3em">Time: @Model.Date</p>
</div>


<div class="container-fluid d-flex">
	<div class="row d-flex">
		<div class="col-lg-6">
			<img style="border-radius:5px" src="~/images/project_bg/project_bg_4.jpg" width="100%" height="90%" />
		</div>
		<div class="col-lg-6">
			<img style="border-radius:5px" src="~/images/project_bg/project_bg_4.jpg" width="100%" height="90%" />
		</div>
		<div class="container mb-2">
			<ul style="display:flex; list-style-type:none;justify-content:flex-start; margin-left: -2em">
				<li>
					<a href="#overview" style="font-size:18px;line-height:28px;font-weight: 600; display:block;">
						Tổng quan
						<span style="font-size:12px;line-height:16px;font-weight:normal !important;display:block">Giới thiệu</span>
					</a>
				</li>
				<li>
					<a href="#location" style="font-size:18px;line-height:28px;font-weight: 600; display:block;margin-left:2em">
						Vị trí
						<span style="font-size:12px;line-height:16px;font-weight:normal !important;display:block">Vị trí địa lý</span>
					</a>
				</li>
				<li>
					<a href="#detail" style="font-size:18px;line-height:28px;font-weight: 600; display:block;margin-left:2em">
						Chi tiết dự án
						<span style="font-size:12px;line-height:16px;font-weight:normal !important;display:block">Đặc điểm nổi bật của dự án</span>
					</a>
				</li>
			</ul>
		</div>
		<hr />

		<div class="container-fluid mt-5 d-flex">
			<div class="row d-flex">
				<div class="col-lg-4 order-lg-1">
					<div id="category-container">
						<h3 style="text-align:center">Để lại thông tin của bạn để nhận báo giá</h3>
						<p>Hãy để lại thông tin của bạn để nhận được tư vấn và cập nhật mới nhất về dự án này</p>
						<button style="background-color: #F27456; color:#fff; margin:0 auto; display:flex" class="btn btn-main" type="submit">Contact for Quote</button>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="info-material">
						<div class="mb-3">
							<h2 id="overview">
								<span class="title font-weight-bold">Tổng quan về dự án @Model.Name</span>
							</h2>
							<p>@Model.Overview</p>
							<img src="~/images/project_bg/project_bg_4.jpg" width="100%" height="100%" />
						</div>
						<div class="mt-2 table-responsive">
							<h2 id="detail">Thông tin chi tiết của mẫu nhà @Model.Scale</h2>
							<table class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>Thông tin</th>
										<th>Chi tiết</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>Chủ sỡ hữu</td>
										<td>@Model.Customer.Name</td>
									</tr>
									<tr>
										<td>Vị trí</td>
										<td>@Model.Location</td>
									</tr>
									<tr>
										<td>Quy mô</td>
										<td>@Model.Scale</td>
									</tr>
									<tr>
										<td>Kích thước</td>
										<td>@Model.Size</td>
									</tr>
									<tr>
										<td>Mô tả</td>
										<td>@Model.Description</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
