
@model SWP391.CHCQS.OurHomeWeb.Areas.Seller.ViewModels.ConstructDetailViewModel



<div class="container img-thumbnail mt-5 mb-5">

    <form class="m-auto" asp-area="Seller" asp-controller="Quotation" asp-action="UpdateConstructDetails">
       
        @* <input hidden asp-route-hiddenData="@ViewBag.CustomQuotation" /> *@
        <input hidden asp-for="ConstructDetail.QuotationId" />

        <div class="mt-3 mb-5 w-100 m-auto">
            <div class="row mt-3">
                <div class="ml-3 rounded-1 float-left">
                    <a href="/Seller/Request/ViewRequestSaved" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Trở lại</a>
                </div>
            </div>
            <h3 class="text-center"><b>Thông tin báo giá chi tiết</b></h3>
            <hr class="w-75 m-auto"></hr>
        </div>
        
        <div class="row mt-5 mb-3 text-center">
            <div class="col-sm">
                <label><b class="text-nowrap">Mã báo giá:</b></label>
                <p>@Model.ConstructDetail.QuotationId</p>
            </div>
            <div class="col-sm">
                <label><b class="text-nowrap">Ngày tạo báo giá:</b></label>
                <p>@Model.ConstructDetail.Quotation.Date</p>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Vị trí:</b></label>
                <p>@Model.ConstructDetail.Quotation.Location</p>
            </div>
            <div class="col-sm">
                <label><b class="text-nowrap">Diện tích:</b></label>
                <p>@Model.ConstructDetail.Quotation.Acreage</p>
            </div>
        </div>
        <div class="row mb-3">

            <div class="col-sm">
                <label><b class="text-nowrap">Loại công trình:</b></label>
                <select asp-for="ConstructDetail.ConstructionId" asp-items="@Model.Construction" type="text" class="form-select">
                    <option disabled selected>--Chọn loại--</option>
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Mức đầu tư:</b></label>
                <select asp-for="ConstructDetail.InvestmentId" asp-items="@Model.Investment" type="text" class="form-select">
                    <option disabled selected>--Chọn mức--</option>
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Loại móng:</b></label>
                <select asp-for="ConstructDetail.FoundationId" asp-items="@Model.Foundation" type="text" class="form-select">
                    <option disabled selected>--Chọn loại--</option>
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Tầng hầm:</b></label>
                <select asp-for="ConstructDetail.BasementId" asp-items="@Model.Basement" type="text" class="form-select">
                    <option disabled selected>--Chọn loại--</option>
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Loại mái:</b></label>
                <select asp-for="ConstructDetail.RooftopId" asp-items="@Model.Rooftop" type="text" class="form-select">
                    <option disabled selected>--Chọn loại--</option>
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Hẻm:</b></label>
                <select asp-for="ConstructDetail.Alley" asp-items="@Model.Alleys" type="text" class="form-select">
                    <option disabled selected>--Chọn loại hẻm--</option>
                </select>

            </div>
            


        </div>

        <div class="row mb-3">

            <div class="col-sm">
                <label><b class="text-nowrap">Chiều rộng:</b></label>
                <input asp-for="ConstructDetail.Width" class="form-control" />
                <span asp-validation-for="ConstructDetail.Width" class="text-danger"></span>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Chiều dài:</b></label>
                <input asp-for="ConstructDetail.Length" class="form-control" />
                <span asp-validation-for="ConstructDetail.Length" class="text-danger"></span>
            </div>
            
            <div class="col-sm">
                <label><b class="text-nowrap">Tầng thượng:</b></label>
                <input asp-for="ConstructDetail.RooftopFloor" class="form-control"/>
                <span asp-validation-for="ConstructDetail.RooftopFloor" class="text-danger"></span>
            </div>
           
            <div class="col-sm">
                <label><b class="text-nowrap">Diện tích lửng:</b></label>
                <input asp-for="ConstructDetail.Mezzanine" class="form-control"/>
                <span asp-validation-for="ConstructDetail.Mezzanine" class="text-danger"></span>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Diện tích vườn:</b></label>
                <input asp-for="ConstructDetail.Garden" class="form-control"/>
                <span asp-validation-for="ConstructDetail.Garden" class="text-danger"></span>
            </div>
        </div>

        <div class="row">

            <div class="col-sm">
                <label><b class="text-nowrap">Số tầng:</b></label>
                <input asp-for="ConstructDetail.Floor" class="form-control" />
                <span asp-validation-for="ConstructDetail.Floor" class="text-danger"></span>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Mặt tiền:</b></label>
                <select type="text" class="form-control" asp-for="ConstructDetail.Facade" asp-items="@Model.Facades">
                </select>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Số phòng:</b></label>
                <input asp-for="ConstructDetail.Room" class="form-control" />
                <span asp-validation-for="ConstructDetail.Room" class="text-danger"></span>
            </div>

            <div class="col-sm">
                <label><b class="text-nowrap">Ban công:</b></label>
                <select type="text" class="form-control" asp-for="ConstructDetail.Balcony">
                    <option disabled selected>--Chọn loại--</option>
                    <option value="false">Không có ban công</option>
                    <option value="true">Có ban công</option>
              </select>
            </div>

        </div>

        <div class="mt-5 mb-3 d-flex justify-content-lg-center">
            <div class="col-6" style="max-width: 20em">
                <button class="form-control text-white btn btn-main" style="background-color: #F27456" type="submit">Lưu thay đổi</button>
            </div>
            <div class="col-6 btn-group" style="max-width: 20em" role="group">
                <a asp-area="Seller" asp-controller="Request" asp-action="SendQuotation" asp-route-id="@Model.ConstructDetail.QuotationId" class="btn btn-primary btn-main border-0 m-1 text-nowrap"> Gửi thông tin</a>
            </div>
        </div>
    
    </form>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

