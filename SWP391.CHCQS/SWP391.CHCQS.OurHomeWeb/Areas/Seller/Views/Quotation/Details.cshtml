@model SWP391.CHCQS.OurHomeWeb.Areas.Seller.ViewModels.QuotationViewModel
@{
    ViewData["Title"] = "Thông tin báo giá chi tiết";
}
<div class="card mt-3 mb-3 w-100">

    <div class="m-auto w-100">

        <div class="mt-3 mb-5 w-100 m-auto">
            <div class="row mt-3">
                <div class="ml-3 rounded-1 float-left">
                    <a href="/Seller/Quotation/ViewQuotation" class="btn btn-main text-white "><i class="bi bi-arrow-left"></i> Trở lại</a>
                </div>
            </div>
            <h3 class="text-center"><b>Thông tin báo giá chi tiết</b></h3>
            <hr class="w-75 m-auto"></hr>
        </div>

        <div class="row mt-3 text-center">
            <div class="col-lg">
                <label><b class="text-nowrap">Mã báo giá:</b></label>
                <p>@Model.CustomQuotation.Id</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Ngày tạo báo giá:</b></label>
                <p>@Model.CustomQuotation.Date.Value.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Vị trí:</b></label>
                <p>@Model.CustomQuotation.Location</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Diện tích:</b></label>
                <p>@Model.CustomQuotation.Acreage</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Số tầng:</b></label>
                <p>@Model.ConstructDetail.Floor</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Mặt tiền:</b></label>
                <p>@Model.ConstructDetail.Facade</p>
            </div>

        </div>

        <div class="row mt-3 text-center">
            <div class="col-lg">
                <label><b class="text-nowrap">Loại công trình:</b></label>
                <p>@Model.ConstructionName</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Mức đầu tư:</b></label>
                <p>@Model.InvestmentName</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Loại móng:</b></label>
                <p>@Model.FoundationName</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Loại hầm:</b></label>
                <p>@Model.BasementName
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Loại mái:</b></label>
                <p>@Model.RoofName</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Ban công:</b></label>
                @if (@Model.ConstructDetail.Balcony)
                {
                    <p>Có ban công</p>
                }
                else
                {
                    <p>Không có ban công</p>
                }
            </div>
           
            
        </div>


        <div class="row text-center">
            <div class="col-lg">
                <label><b class="text-nowrap">Chiều rộng:</b></label>
                <p>@Model.ConstructDetail.Width</p>
            </div>
            <div class="col-lg">
                <label><b class="text-nowrap">Chiều dài:</b></label>
                <p>@Model.ConstructDetail.Length</a>
            </div>
            
            <div class="col-lg">
                <label><b class="text-nowrap">Tầng thượng:</b></label>
                <p>@Model.ConstructDetail.RooftopFloor</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Diện tích lửng:</b></label>
                <p>@Model.ConstructDetail.Mezzanine</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Diện tích vườn:</b></label>
                <p>@Model.ConstructDetail.Garden</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Số phòng:</b></label>
                <p>@Model.ConstructDetail.Room</p>
            </div>

            <div class="col-lg">
                <label><b class="text-nowrap">Hẻm:</b></label>
                <p>@Model.ConstructDetail.Alley</p>
            </div>
        </div>

    </div>
</div>
